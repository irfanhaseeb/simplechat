{
  "$schema": "https://biomejs.dev/schemas/2.3.4/schema.json",
  "vcs": {
    "enabled": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!**/node_modules/*", "!**/dist/*"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useImportType": {
          "level": "warn",
          "options": {
            "style": "separatedType"
          }
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "bracketSameLine": true,
      "semicolons": "asNeeded",
      "lineWidth": 120
    }
  },
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              { "type": true, "source": [":NODE:", ":PACKAGE:"] },
              { "type": true },
              ":BLANK_LINE:",
              [":NODE:", ":PACKAGE:"],
              ":BLANK_LINE:"
            ]
          }
        },
        "recommended": true
      }
    }
  }
}
